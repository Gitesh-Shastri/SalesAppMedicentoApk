<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.developer.medicento.salesappmedicento"
    android:versionCode="2"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher_new_full"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new_full_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.developer.medicento.salesappmedicento.actvity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.developer.medicento.salesappmedicento.actvity.RegisterActivity"
            android:label="Sales Person Registration" />
        <activity
            android:name="com.developer.medicento.salesappmedicento.NewPharmacy"
            android:label="Add new Pharmacy"
            android:parentActivityName="com.developer.medicento.salesappmedicento.actvity.PlaceOrderNewActivity" />
        <activity
            android:name="com.developer.medicento.salesappmedicento.SalesPersonDetails"
            android:label="My Profile"
            android:parentActivityName="com.developer.medicento.salesappmedicento.actvity.PlaceOrderNewActivity" />
        <activity
            android:name="com.developer.medicento.salesappmedicento.actvity.SignInActivity"
            android:label="Sign In"
            android:parentActivityName="com.developer.medicento.salesappmedicento.actvity.PlaceOrderNewActivity" />
        <activity
            android:name="com.developer.medicento.salesappmedicento.NewArea"
            android:label="Add new Area"
            android:parentActivityName="com.developer.medicento.salesappmedicento.actvity.PlaceOrderNewActivity" />
        <activity
            android:name="com.developer.medicento.salesappmedicento.actvity.Recentorder"
            android:label="Recent Order"
            android:parentActivityName="com.developer.medicento.salesappmedicento.actvity.ParticularTabDetailsActivity" />
        <activity
            android:name="com.developer.medicento.salesappmedicento.actvity.PlaceOrderNewActivity"
            android:label="Sales App Medicento"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name="com.developer.medicento.salesappmedicento.pharmacyRegister" />
        <activity android:name="com.developer.medicento.salesappmedicento.recover" />
        <activity
            android:name="com.developer.medicento.salesappmedicento.StatsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.developer.medicento.salesappmedicento.demoActivity" />
        <activity
            android:name="com.developer.medicento.salesappmedicento.actvity.ParticularTabDetailsActivity"
            android:label="My Orders"
            android:parentActivityName="com.developer.medicento.salesappmedicento.actvity.PlaceOrderNewActivity" />
        <activity
            android:name="com.developer.medicento.salesappmedicento.actvity.ParticularOrderDetails"
            android:label="Order Details"
            android:parentActivityName="com.developer.medicento.salesappmedicento.actvity.Recentorder" />
        <activity
            android:name="com.developer.medicento.salesappmedicento.actvity.OrderConfirmed"
            android:label="Order Placed"
            android:parentActivityName="com.developer.medicento.salesappmedicento.actvity.PlaceOrderNewActivity" />
        <activity
            android:name="com.google.firebase.auth.internal.FederatedSignInActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:launchMode="singleInstance"
            android:permission="com.google.firebase.auth.api.gms.permission.LAUNCH_FEDERATED_SIGN_IN"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <service android:name="com.google.firebase.components.ComponentDiscoveryService" >
            <meta-data
                android:name="com.google.firebase.components:com.google.firebase.auth.FirebaseAuthRegistrar"
                android:value="com.google.firebase.components.ComponentRegistrar" />
        </service>

        <activity
            android:name="com.google.android.gms.auth.api.signin.internal.SignInHubActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <!--
            Service handling Google Sign-In user revocation. For apps that do not integrate with
            Google Sign-In, this service will never be started.
        -->
        <service
            android:name="com.google.android.gms.auth.api.signin.RevocationBoundService"
            android:exported="true"
            android:permission="com.google.android.gms.auth.api.signin.permission.REVOCATION_NOTIFICATION" />

        <provider
            android:name="com.google.firebase.provider.FirebaseInitProvider"
            android:authorities="com.developer.medicento.salesappmedicento.firebaseinitprovider"
            android:exported="false"
            android:initOrder="100" />

        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>