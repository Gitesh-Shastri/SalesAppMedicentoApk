<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/medicine_name_auto_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <TextView
            android:id="@+id/medicine_name_auto"
            android:layout_width="0dp"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/medicine_discount"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:gravity="end"
            android:paddingRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#b52828" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/company_rl"
        android:layout_below="@+id/medicine_name_auto_ll"
        android:weightSum="10">

        <TextView
            android:id="@+id/company_name_auto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="Company : "
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginRight="3dp"
            android:textColor="@color/dark_gray" />

        <TextView
            android:textColor="@color/official_color"
            android:id="@+id/packing"
            android:padding="2dp"
            android:textSize="11sp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/medicine_mrp_auto"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:gravity="end"
            android:paddingRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#2d911e" />
    </LinearLayout>
    <View
        android:layout_below="@id/company_rl"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c6c6c6"
        android:layout_marginBottom="2dp"
        />
</RelativeLayout>